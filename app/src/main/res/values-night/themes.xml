<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HypoCoin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_400</item>
        <item name="colorPrimaryVariant">@color/blue_gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_gray_800</item>
        <item name="colorSecondaryVariant">@color/blue_gray_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_gray_dark_status</item>
        <item name="android:navigationBarColor">@color/blue_gray_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/blue_gray_800</item>
        <item name="colorOnBackground">@color/blue_gray_50</item>
        <item name="colorSurface">@color/blue_gray_700</item>
        <item name="colorOnSurface">@color/blue_gray_50</item>
        <item name="colorError">@color/amber_900</item>
        <item name="colorOnError">@color/white</item>

        <item name="fontFamily">@font/rubik</item>
        <item name="materialButtonStyle">@style/DarkButtonStyle</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Overline</item>
    </style>

    <!-- Button styles -->
    <style name="DarkButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@drawable/button_dark_bg</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">center</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
    </style>
</resources>