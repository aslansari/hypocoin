<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HypoCoin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_400</item>
        <item name="colorPrimaryVariant">@color/amber_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_100</item>
        <item name="colorSecondaryVariant">@color/amber_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/rubik</item>
        <item name="buttonBarStyle">@style/ButtonStyle</item>
    </style>

    <!-- Button styles -->
    <style name="BaseButtonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="ButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@color/amber_800</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
    </style>
</resources>